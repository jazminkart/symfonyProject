{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_etudiant</th>
                <th>Date_creation</th>
                <th>Date_modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.idEtudiant }}</td>
                <td>{{ demande.dateCreation ? demande.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ demande.dateModification ? demande.dateModification|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('demande_show', {'id': demande.id}) }}">show</a>
                    <a href="{{ path('demande_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demande_new') }}">Create new</a>
{% endblock %}
